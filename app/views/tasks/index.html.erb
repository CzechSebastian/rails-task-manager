<% @tasks.each do |task| %>
 <% if task.completed %>
 <div>
  <p>
  <i class="far fa-check-circle"></i><%= link_to task.title, task_path(task)  %>
  <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </p>
 </div>
 <% else %>
  <div>
    <p>
    <i class="far fa-circle"></i><%= link_to task.title, task_path(task)  %>
  <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </p>
  </div>
 <% end %>
<% end %>
</div>

